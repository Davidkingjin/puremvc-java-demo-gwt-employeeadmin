<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'> 
    
	<ui:style>
		.box { 
			border:0px;
			border-collapse:collapse;
 			margin: 0px 0px 0px 0px;
			padding: 0px 0px 0px 0px;
    	}
    	.box > div{
			border:1px solid #d9e6f0;
			border-collapse:collapse;
		}	
		.box h3{
			margin: 0px;
			background:#e3e9ff;
			border-bottom:1px solid #d9e6f0;
			padding: 2px;
			color:#375b91;
		}	
    	.box > div > select{ 
			padding: 2px 0px 0px 0px;
 			margin: 4px;		
			border:1px solid #d9e6f0;
   			background:#e3e9ff;
    	}
    	.box > div > button{ 
 			width: 80px;
			padding: 2px 0px 0px 0px;
 			margin: 4px;		
    	}
	</ui:style>

 	<g:CaptionPanel styleName='{style.box}' ui:field='cpanel' >
		<g:HTMLPanel>
		<g:HTML><h3>User Roles</h3></g:HTML>
		<g:ListBox width='390px' ui:field="lb" ></g:ListBox>
		<br/>
		<g:ListBox ui:field="lbRoleCombo" ></g:ListBox>
		<g:Button ui:field="bAdd" >Add</g:Button>
		<g:Button ui:field="bRemove">Remove</g:Button>
		</g:HTMLPanel>		
	</g:CaptionPanel>

</ui:UiBinder>